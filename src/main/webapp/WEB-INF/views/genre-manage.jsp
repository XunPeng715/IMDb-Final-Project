	<h2>Manage Genre</h2>
	<table cellpadding="5" cellspacing="5" class="table table-hover">
		<tr>
			<th>Genre Title</th>
			<th>Update</th>
			<th>Delete</th>
		</tr>
		<c:forEach var="genre" items="${genres}">

			<tr>
				<td>${genre.title}</td>
				<td><a class="btn btn-default" role="button" data-toggle="collapse" href="#${genre.title}" aria-expanded="false" aria-controls="${genre.title}"> Update</a></td>
				<td>
					<form action="${contextPath}/genre/delete.htm" method="post">
						<input type="submit" value="Delete"
							class="deleteBtn btn btn-primary" /> <input type="hidden"
							name="title" value="${genre.title}" />
					</form>
				</td>
			</tr>
			<tr class="collapse" id="${genre.title}">
					<form action="${contextPath}/genre/update.htm" method="post">
					<td>					
						<input type="hidden" name="genreId" value="${genre.genreId}" />
						<input type="text" name="title" value="${genre.title}"  class="form-control"/>
						</td>
					<td><input type="submit" class="btn btn-info" value=" Save ">
					
					</td>
					</form>			
			</tr>
		</c:forEach>
	</table>
